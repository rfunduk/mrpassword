<div class='stepped on-step-index-0'>
  <div class='inner'>
    <div class='step step1'>
      <div class='action-buttons'>
        <button class='next-step btn btn-default'>Change Master Password...</button>
      </div>
    </div>

    <div class='step step2'>
      <div class='form-group has-feedback'>
        <input type='password' class='form-control current-master-password password-field' placeholder='Current Master Password' />
        <span class='glyphicon form-control-feedback'></span>
      </div>
    </div>

    <div class='step step3'>
      <div class='input-group'>
        <input type='password' class='form-control new-master-password password-field' placeholder='New Master Password' />
        <span class='input-group-btn'>
          <button class='btn btn-default next-step' type='button'>
            Next
            <span class='glyphicon glyphicon-chevron-right'></span>
          </button>
        </span>
      </div>
    </div>

    <div class='step step4'>
      <div class='form-group has-feedback'>
        <input type='password' class='form-control confirm-master-password password-field' placeholder='Confirm Master Password' />
        <span class='glyphicon form-control-feedback'></span>
      </div>
    </div>

    <div class='step step5'>
      <div class='progress'>
        <div class='progress-bar' role='progressbar' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100' style='width: 0%;'>
          <span class='sr-only'>0% Complete</span>
        </div>
      </div>
    </div>
  </div>
</div>
