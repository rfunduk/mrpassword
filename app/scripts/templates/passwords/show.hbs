{{#unlessEmpty tags}}
  <div class='tags'>
    {{#each tags}}
      {{#if active}}
        <div style='background-color: {{color}};'></div>
      {{/if}}
    {{/each}}
  </div>
{{/unlessEmpty}}
<div class='row'>
  <div class='col-xs-12 col-sm-5'>
    <h4 class='list-group-item-heading'>
      {{#if name}}{{name}}{{else}}** UNNAMED **{{/if}}
    </h4>
  </div>
  <div class='col-xs-12 col-sm-7'>
    <div class='list-group-item-text'>
      <div class='stepped on-step-index-0'>
        <div class='inner'>

          <div class='step step1'>
            <div class='action-buttons'>
              <button class='btn btn-default action-edit'>
                <span class='glyphicon glyphicon-pencil'></span>
              </button>
              <button class='next-step btn btn-default'>Reveal...</button>
            </div>
          </div>

          <div class='step step2'>
            <div class='form-group has-feedback'>
              <input type='password' class='form-control master-password password-field' placeholder='Your Master Password' />
              <span class='glyphicon form-control-feedback'></span>
            </div>
          </div>

          <div class='step step3'>
            <div class='input-group'>
              {{#if isMultiline}}
                <textarea class='form-control revealed-password password-field'></textarea>
              {{else}}
                <input type='text' class='form-control revealed-password password-field' />
              {{/if}}
              <span class='input-group-btn'>
                <button class='btn btn-default action-copy' type='button'><span class='glyphicon glyphicon-copy'></span></button>
                <button class='btn btn-default action-done' type='button'>Done</button>
              </span>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
